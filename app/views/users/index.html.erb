<div class="container">
  <div class="row">
    <!--User info-->
    <%= render 'users/user_info',user: @user %>
    <!--投稿画像一覧-->
    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |f| %>
          <tr>
            <td><%= image_tag f.get_profile_image("50x50") %></td>
            <td><%= f.name %></td>
            <td><%= link_to "Show",user_path(f) %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
