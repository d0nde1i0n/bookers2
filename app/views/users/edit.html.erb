<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editting Book</h1>
      <%= form_with model: @user,url: user_path(@user),method: :patch, local:true do |f| %>
      <div class="form-group">
          <%= f.label :Name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :Image %> <br>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :Intoroduction %> <br>
          <%= f.text_area :introduction%>
        </div>
        <div class="form-group">
          <%= f.submit "Update user",class: "btn btn-secondary" %>
        </div>
      <% end %>
        <div>
          <%= link_to "Show",user_path(@user) %>
           |
          <%= link_to "Back",users_path %>
        </div>
    </div>
  </div>
</div>

