<!--ユーザ編集画面-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editting Book</h1>
      <%= form_with model: @user,url: user_path(@user),method: :patch, local:true do |f| %>
      <!--バリデーションによるエラーメッセージ-->
      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <!--通常の表示箇所-->
      <div class="form-group">
          <%= f.label :Name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :Image %> <br>
          <%= f.file_field :profile_image,accept: "image/*"  %>
        </div>
        <div class="form-group">
          <%= f.label :Intoroduction %> <br>
          <%= f.text_area :introduction%>
        </div>
        <div class="form-group">
          <%= f.submit "Update user",class: "btn btn-secondary" %>
        </div>
      <% end %>
        <div>
          <%= link_to "Show",user_path(@user) %>
           |
          <%= link_to "Back",users_path %>
        </div>
    </div>
  </div>
</div>

