<div class="col-md-8">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        </tr>
        <% books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image("50x50") %></td>
          <td><%= link_to book.title,book_path(book) %></td>
          <td><%= book.body %></td>
          </tr>
          <% end %>
        </thead>
      </table>
  </div>