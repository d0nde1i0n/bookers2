<div class="container">
  <div class="row">
    <!--User info-->
    <%= render 'users/user_info',user: @user %>
    <!--投稿画像一覧-->
    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <td>
                <%= image_tag @book_detail.user.get_profile_image("100x100") %>
                <br >
                <%= link_to  @book_detail.user.name,user_path(@book_detail.user_id) %>
            </td>
            <td><%= link_to @book_detail.title,book_path(@book_detail) %></td>
            <td><%= @book_detail.body %></td>
            <!--投稿内容がログインユーザに紐づくかによって、表示内容を変更する。-->
            <% if @book_detail.user == current_user %>
            <td>
                <%= link_to "Edit",edit_book_path(@book_detail),class: "btn btn-success"%>
                </td>
            <td>
                <%= link_to "Destroy",book_path(@book_detail.id),method: :delete,class: "btn btn-danger","data-confirm"=>"本当に消しますか？" %>
            </td>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>